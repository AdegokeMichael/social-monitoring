# =============================================================================
# Social Media Monitoring & Analytics Agent - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual credentials
# DO NOT commit .env to version control!

# =============================================================================
# REDDIT API CREDENTIALS
# =============================================================================
# Get these from: https://www.reddit.com/prefs/apps
# 1. Go to the link above
# 2. Click "create app" or "create another app"
# 3. Select "script" as the app type
# 4. Fill in name, description, and redirect URI
# 5. Copy the client ID (under the app name) and secret

REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database settings
# The default password should be changed for production

DB_HOST=localhost
DB_PORT=5432
DB_NAME=social_monitoring
DB_USER=postgres
DB_PASSWORD=change_this_secure_password_123

# =============================================================================
# EMAIL/SMTP CONFIGURATION
# =============================================================================
# For Gmail, you need to use an "App Password":
# 1. Enable 2-factor authentication on your Google account
# 2. Go to: https://myaccount.google.com/apppasswords
# 3. Generate an app password for "Mail"
# 4. Use that password below (not your regular Gmail password)

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_gmail_app_password_here
FROM_EMAIL=your-email@gmail.com

# Comma-separated list of email recipients for alerts
EMAIL_RECIPIENTS=admin@example.com,team@example.com

# =============================================================================
# SLACK CONFIGURATION (Optional)
# =============================================================================
# To get a Slack webhook URL:
# 1. Go to https://api.slack.com/apps
# 2. Create a new app or select existing
# 3. Enable "Incoming Webhooks"
# 4. Create a new webhook for your desired channel
# 5. Copy the webhook URL below

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =============================================================================
# N8N CONFIGURATION
# =============================================================================
# Credentials for accessing the n8n web interface

N8N_HOST=localhost
N8N_PORT=5678
N8N_USER=admin
N8N_PASSWORD=change_this_n8n_password_123

# =============================================================================
# GRAFANA CONFIGURATION
# =============================================================================
# Credentials for accessing Grafana dashboards

GRAFANA_HOST=localhost
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_this_grafana_password_123

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Model version identifier
MODEL_VERSION=v1.0

# Collection interval in minutes (for scheduled runs)
COLLECTION_INTERVAL_MINUTES=60

# =============================================================================
# ADVANCED SETTINGS (Optional - Use defaults if unsure)
# =============================================================================

# Redis configuration (if using caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Python environment
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Timezone
TZ=UTC

# =============================================================================
# MONITORING & ALERTING THRESHOLDS
# =============================================================================

# Sentiment analysis thresholds
NEGATIVE_SENTIMENT_THRESHOLD=0.85
HIGH_ENGAGEMENT_SCORE=100
HIGH_ENGAGEMENT_COMMENTS=50
VIRAL_THRESHOLD=500

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit this file with real credentials to version control
# 2. Use strong, unique passwords for production
# 3. Consider using a secrets management service for production
# 4. Test email/Slack notifications before deploying
# 5. Monitor database size and set up regular backups
